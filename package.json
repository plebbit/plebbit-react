{
  "name": "plebbit",
  "version": "0.1.11",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "dependencies": {
    "@capacitor/android": "3.6.0",
    "@capacitor/core": "3.6.0",
    "@chakra-ui/icons": "1.1.1",
    "@chakra-ui/react": "1.7.4",
    "@emotion/react": "11.7.1",
    "@emotion/styled": "11.6.0",
    "@plebbit/plebbit-logger": "https://github.com/plebbit/plebbit-logger.git",
    "@plebbit/plebbit-react-hooks": "https://github.com/plebbit/plebbit-react-hooks.git#32199b6fb4ac38670568aece8278d3733ef69c63",
    "@sweetalert/with-react": "0.1.1",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@uiw/react-markdown-editor": "3.2.7",
    "debug": "4.3.4",
    "dompurify": "^2.4.0",
    "draft-js": "0.11.7",
    "draftjs-to-markdown": "0.6.0",
    "electron-context-menu": "3.3.0",
    "electron-is-dev": "2.0.0",
    "emojibase": "6.1.0",
    "framer-motion": "5.6.0",
    "html-react-parser": "3.0.1",
    "interweave": "13.0.0",
    "interweave-autolink": "5.1.0",
    "interweave-emoji": "7.0.0",
    "linkifyjs": "3.0.5",
    "markdown-it": "13.0.1",
    "mock-require": "3.0.3",
    "moment": "2.29.1",
    "react": "17.0.2",
    "react-color": "^2.19.3",
    "react-copy-to-clipboard": "5.1.0",
    "react-dom": "17.0.2",
    "react-draft-wysiwyg": "1.14.7",
    "react-icons": "4.3.1",
    "react-infinite-scroll-component": "6.1.0",
    "react-moment": "1.1.1",
    "react-router-dom": "5.3.0",
    "react-scripts": "5.0.0",
    "react-select": "5.3.1",
    "react-toastify": "^9.0.8",
    "remark-gfm": "3.0.1",
    "styled-components": "5.3.3",
    "sweetalert2": "11.4.10",
    "uuid": "^9.0.0",
    "web-vitals": "2.1.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "cross-env PUBLIC_URL=./ GENERATE_SOURCEMAP=false react-scripts build",
    "netLify-build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "yarn electron:download-ipfs && rimraf .plebbit && electron .",
    "electron:start": "yarn electron:download-ipfs && rimraf .plebbit && concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:start:nd": "yarn electron:download-ipfs && concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build:linux": "electron-builder build --publish never -l",
    "electron:build:windows": "electron-builder build --publish never -w",
    "electron:build:mac": "electron-builder build --publish never -m",
    "electron:download-ipfs": "node electron/downloadIpfs",
    "android:build:icons": "cordova-res android --skip-config --copy --resources /tmp/plebbit-react-android-icons --icon-source ./android/icons/icon.png --splash-source ./android/icons/splash.png --icon-foreground-source ./android/icons/icon-foreground.png --icon-background-source '#ffffff'",
    "prepare": "husky install",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "chrome >= 67",
      "edge >= 79",
      "firefox >= 68",
      "opera >= 54",
      "safari >= 14"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "plebbit.desktop",
    "productName": "plebbit",
    "beforePack": "electron/beforePack.js",
    "afterAllArtifactBuild": "electron/afterAllArtifactBuild.js",
    "extraResources": [
      {
        "from": "bin/${os}",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "build/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extends": null,
    "mac": {
      "target": "dmg",
      "category": "public.app-category.social-networking",
      "type": "distribution"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "linux": {
      "target": "AppImage",
      "category": "Network"
    }
  },
  "lint": "eslint .",
  "lint:fix": "eslint --fix",
  "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
  "devDependencies": {
    "@capacitor/cli": "3.6.0",
    "concurrently": "7.0.0",
    "cordova-res": "0.15.4",
    "cross-env": "7.0.3",
    "decompress": "4.2.1",
    "electron": "19.0.1",
    "electron-builder": "23.0.9",
    "eslint": "8.22.0",
    "eslint-config-node": "4.1.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.0",
    "husky": ">=7",
    "lint-staged": ">=10",
    "prettier": "2.7.1",
    "wait-on": "6.0.1",
    "yarn": "1.22.18"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
